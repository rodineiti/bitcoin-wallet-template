<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
  >
    <h1>Add user</h1>

  </div>
  <div class="row">
    <div class="col">
      <div class="row">
        <div class="col text-end">
          <span class="badge bg-success">Current price bitcoin:
            {{bitcoinBuy}}</span>
        </div>
      </div>
      <hr />
      <div class="row">
        <div class="col-3">
          <form id="form-user" method="post" action="/users/store">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value=""
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=""
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
              />
            </div>
            <button
              type="submit"
              id="btn-submit"
              class="btn btn-primary"
            >Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>